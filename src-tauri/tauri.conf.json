{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "検版ビューアー",
  "version": "1.0.0",
  "identifier": "com.kenban-viewer.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build || exit 0",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "検版ビューアー",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "center": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    }
  }
}
